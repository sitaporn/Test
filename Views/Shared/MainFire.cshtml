
@{
    ViewBag.Title = "MainFire";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .header__navbar ul li a {
    color:#fff;
    }
</style>
<div class="page-wrapper">
    <!-- HEADER DESKTOP-->
    <header class="header-desktop3 d-none d-lg-block" style="background: #b72217">
        <div class="section__content section__content--p35">
            <div class="header3-wrap">
                <div class="header__logo">
                    <h3 style="color:white"> <i class="fas fa-fire"></i> Fire</h3>
                </div>
                <div class="header__navbar">
                    <ul class="list-unstyled">
                        <li>
                            <a href="@Url.Action("Index","Fire")">
                                <i class="fas fa-address-book" style="color:#fff"></i>
                                <span class="bot-line"></span>Check Sheet
                            </a>
                        </li>
                        <li class="has-sub">
                            <a href="#">
                                <i class="fas fa-cog" style="color:#fff"></i>
                                <span class="bot-line"></span>Master
                            </a>
                            <ul class="header3-sub-list list-unstyled">
                                <li>
                                    <a href="@Url.Action("FType","Fire")">ชนิด</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("FSize","Fire")">ขนาด</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("FPlace","Fire")">สถานที่ติดตั้ง</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="header__tool">
                    <div class="header-button-item has-noti js-item-menu">

                    </div>
                    <div class="header-button-item js-item-menu">

                    </div>
                    <div class="account-wrap">
                        <div class="account-item account-item--style2 clearfix js-item-menu">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- END HEADER DESKTOP-->
    <!-- HEADER MOBILE-->
    <header class="header-mobile header-mobile-2 d-block d-lg-none">
        <div class="header-mobile__bar">
            <div class="container-fluid">
                <div class="header-mobile-inner">
                    <h4 style="color:white"><i class="fas fa-fire"></i> Fire</h4>
                    <button class="hamburger hamburger--slider" type="button">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
        </div>
        <nav class="navbar-mobile">
            <div class="container-fluid">
                <ul class="navbar-mobile__list list-unstyled">
                    <li>
                        <a href="@Url.Action("Index","Fire")">
                            <i class="fas fa-list" style="color:#fff"></i>Check Sheet
                        </a>
                    </li>
                    <li class="has-sub">
                        <a class="js-arrow" href="#">
                            <i class="fas fa-cog"></i>Master
                        </a>
                        <ul class="navbar-mobile-sub__list list-unstyled js-sub-list">
                            <li>
                                <a href="@Url.Action("FType","Fire")">ชนิด</a>
                            </li>
                            <li>
                                <a href="@Url.Action("FSize","Fire")">ขนาด</a>
                            </li>
                            <li>
                                <a href="@Url.Action("FPlace","Fire")">สถานที่ติดตั้ง</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="sub-header-mobile-2 d-block d-lg-none">
        <div class="header__tool">
            <div class="header-button-item has-noti js-item-menu">

            </div>
            <div class="header-button-item js-item-menu">

            </div>
            <div class="account-wrap">
                <div class="account-item account-item--style2 clearfix js-item-menu">

                </div>
            </div>
        </div>
    </div>
    <!-- END HEADER MOBILE -->
    <!-- PAGE CONTENT-->
    <div class="page-content--bgf7">

        <!-- DATA TABLE-->
        <section class="p-t-20">

            <div class="container">
                @RenderBody()

            </div>
        </section>
        <!-- END DATA TABLE-->
        <!-- COPYRIGHT-->
        <section class="p-t-60 p-b-20">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="copyright">
                            <p>Copyright © 2018 Colorlib. All rights reserved. Template by <a href="https://colorlib.com">Colorlib</a>.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- END COPYRIGHT-->
    </div>

</div>


<!-- Vendor JS       -->
<script src="~/Scripts/vendor/slick/slick.min.js"></script>
<script src="~/Scripts/vendor/animsition/animsition.min.js"></script>
<script src="~/Scripts/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
<script src="~/Scripts/vendor/circle-progress/circle-progress.min.js"></script>
<script src="~/Scripts/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
<!-- Main JS-->
<script src="~/Scripts/js/main.js"></script>

